<section class="content-header">
    <h1>Settings <small>Show and change application settings</small></h1>
</section>
<section class="content">
    <div class="box box-primary">     
        <div class="row">
            <div class="col-md-5">
                <!-- form start -->
                <form role="form" novalidate name="settingsForm" ng-submit="save()">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="holdTime">Hold Time</label>
                            <input type="number" class="form-control" id="holdTime" placeholder="Hold Time" name="holdTime" min="1" ng-model="holdTime" required>
                        </div>
                        <div class="form-group">
                            <label for="maxHoldTime">Maximum Hold Time</label>
                            <input type="number" class="form-control" id="maxHoldTime" placeholder="Maximum Hold Time" name="maxHoldTime" min="1" ng-model="maxHoldTime" required>
                        </div>
                        <div class="form-group">
                            <label for="daysInAdvance">Days In Advance</label>
                            <input type="number" class="form-control" id="daysInAdvance" placeholder="Days In Advance" name="daysInAdvance" min="1" ng-model="daysInAdvance" required>
                        </div>

                        <h4>Slots status colors</h4>
                        <div class="form-group">
                            <label>Available</label>
                            <color-picker ng-model="colors.availableColor"></color-picker>
                        </div>
                        <div class="form-group">
                            <label>Withheld</label>
                            <color-picker ng-model="colors.witheldColor"></color-picker>
                        </div>
                        <div class="form-group">
                            <label>Booked</label>
                            <color-picker ng-model="colors.bookedColor"></color-picker>
                        </div>
                        <div class="form-group">
                            <label>Not Available</label>
                            <color-picker ng-model="colors.notAvailableColor"></color-picker>
                        </div>

                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary" ng-disabled="settingsForm.$invalid || saving">{{saving?'Saving...':'Save'}}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>