<div>
    <form name="sendMessageForm" role="form" novalidate class="form-validation" ng-submit="send()">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>Send Message</span>
            </h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>@L("UserName")</label>
                <input class="form-control" type="text" name="username" ng-model="user.userName" readonly>
            </div>     
            <div class="form-group">
                <label>Message</label>
                <textarea class="form-control" ng-model="message" ng-disabled="sending" name="message" required></textarea>
            </div> 
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" ng-click="cancel()">@L("Cancel")</button>
            <button type="submit" class="btn btn-primary blue" ng-disabled="sendMessageForm.$invalid || sending"><i class="fa fa-save"></i> <span>{{sending?'Sending...':'Send'}}</span></button>
        </div>
    </form>
</div>